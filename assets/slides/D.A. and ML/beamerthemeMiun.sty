% Default theme as a base
\usetheme{default}

% Colours
\definecolor{cfcd213}{RGB}{252,210,19}
\definecolor{c1478c7}{RGB}{20,120,199}
\definecolor{c231f20}{RGB}{35,31,32}
\definecolor{miunblue}{RGB}{20,120,199}
\definecolor{miunyellow}{RGB}{252,210,19}
\definecolor{xmindred}{RGB}{239,83,80}
\definecolor{xmindyellow}{RGB}{255,182,9}
\definecolor{xmindblue}{RGB}{76,145,255}
\definecolor{xmindgreen}{RGB}{0,209,86}

\pgfdeclareimage[height=0.5cm]{university-logo}{gfx/MU_logotyp_int_CMYK.pdf}

% Background
\setbeamertemplate{background canvas}{%
	\tikz[remember picture,overlay] {\node[inner sep=0pt,opacity=0.75, scale=3, below right=-0.8cm] at (current page.east)  {\input{gfx/MU_logo.tex}};
}}
\setbeamertemplate{footline}{%
	%\mbox{\hspace{3mm}\pgfuseimage{university-logo}}\vspace*{3mm}
}

% Fonts
%\defaultfontfeatures{Ligatures=TeX,Scale=MatchLowercase}:
\renewcommand\sfdefault{phv}
\renewcommand\familydefault{\sfdefault}
\setbeamerfont{title}{size=\Huge\bfseries}
\setbeamerfont{frametitle}{size=\huge\bfseries}
\setbeamerfont{pagenumber}{size=\small,series=\bfseries}
\setbeamercolor{title}{bg=, fg=miunblue}
\setbeamercolor{frametitle}{bg=, fg=miunblue}
\setbeamercolor{pagenumber}{fg=gray}
\setbeamercolor{normal text}{bg=white, fg=black}



% Structure
\setbeamertemplate{items}[circle]
\setbeamercolor{structure}{fg=black}
\setbeamercolor{item}{fg=xmindgreen}
\setbeamercolor{itemize item}{fg=gray}
\setbeamercolor{itemize subitem}{fg=black}
\setbeamercolor{itemize subsubitem}{fg=black}
\setbeamercolor{enumerate item}{ fg=xmindblue}
%\setbeamercolor{tableofcontents}{ fg=black}

% Blocks
\setbeamertemplate{blocks}[rounded]
\setbeamercolor{block title}{fg=white,bg=miunblue}
\setbeamercolor{block title example}{parent=block title}
\setbeamercolor{block body}{parent=normal text,%
  use=block title,bg=miunblue!30}
\setbeamercolor{block body example}{parent=block body}

% Features
\setbeamertemplate{headline}{}
\setbeamertemplate{navigation symbols}{}